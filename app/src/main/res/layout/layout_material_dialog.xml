<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/material_card"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="23dp"
            android:textColor="@color/color_D9000000"
            android:textSize="20sp"
            tools:text="Material title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:layout_height="700dp">

            <LinearLayout
                android:id="@+id/message_content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:lineSpacingMultiplier="1.3"
                    android:textColor="@color/color_80000000"
                    android:textSize="16sp"
                    tools:text="message" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="32dp"
        android:gravity="center_vertical"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/btn_n"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:textColor="@color/color_FF4990E2"
            tools:text="CANCEL" />

        <Button
            android:id="@+id/btn_p"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:textColor="@color/color_FF4990E2"
            tools:text="OK" />
    </LinearLayout>

</LinearLayout>